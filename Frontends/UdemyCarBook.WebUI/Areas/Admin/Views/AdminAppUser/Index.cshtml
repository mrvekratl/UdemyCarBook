@model List<GetAppUserList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kullanıcı Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Kullanıcı listesine bu sayfadana ulaşabilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ad</th>
                                        <th>Soyad</th>
                                        <th>Kullanıcı Adı</th>
                                        <th>Email</th>
                                        <th>Kullanıcı Rolü</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td>@item.Surname</td>
                                            <td>@item.Username</td>
                                            <td>@item.Email</td>
                                            <td>@item.AppRoleName</td>
                                            <td><a href="/Admin/AdminAppUser/RemoveAppUser/@item.AppUserId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminAppUser/UpdateAppUser/@item.AppUserId" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminAppUser/CreateAppUser" class="btn btn-outline-primary">Yeni Kullanıcı Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>